<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.musicmap.PlayerActivity"
    android:background="@color/colorPrimary">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:elevation="0dp"
        android:theme="@style/PlayerStyle"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:titleTextColor="@android:color/white"
        android:subtitleTextColor="@color/white"/>

    <ImageView
        android:id="@+id/play_page_album_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/default_cd"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription=""
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/my_toolbar"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="388dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="388dp"
        tools:layout_editor_absoluteX="0dp"/>

        <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.533"
            android:id="@+id/constraintLayout">

            <SeekBar
                android:id="@+id/play_page_seek_bar"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintLeft_toLeftOf="@+id/guideline4"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintRight_toLeftOf="@+id/guideline7"
                />

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline2"
                app:layout_constraintGuide_begin="46dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="127dp"
                tools:layout_editor_absoluteX="0dp"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintGuide_begin="100dp"
                android:orientation="horizontal"
                tools:layout_editor_absoluteY="181dp"
                tools:layout_editor_absoluteX="0dp"/>

            <ImageView
                android:id="@+id/play_prev"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="prev button"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                app:srcCompat="@drawable/ic_skip_previous_white_24dp"
                tools:ignore="HardcodedText"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline5"
                app:layout_constraintGuide_begin="118dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="118dp"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline6"
                app:layout_constraintGuide_begin="267dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="267dp"/>

            <ImageView
                android:id="@+id/play_play_pause"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="play or pause button"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintLeft_toLeftOf="@+id/guideline5"
                app:layout_constraintRight_toLeftOf="@+id/guideline6"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                app:srcCompat="@drawable/ic_play_arrow_white_24dp"
                tools:ignore="HardcodedText"/>

            <ImageView
                android:id="@+id/play_next"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:contentDescription="next button"
                app:layout_constraintBottom_toTopOf="@+id/guideline3"
                app:layout_constraintLeft_toLeftOf="@+id/guideline6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline2"
                app:srcCompat="@drawable/ic_skip_next_white_24dp"
                tools:ignore="HardcodedText"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline4"
                app:layout_constraintGuide_begin="47dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="47dp"/>

            <android.support.constraint.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline7"
                app:layout_constraintGuide_begin="322dp"
                android:orientation="vertical"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="322dp"/>

            <TextView
                android:id="@+id/current_pos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="1:02"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/max_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="3:55"
                android:textColor="@android:color/white"
                android:textColorLink="@android:color/holo_blue_dark"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintLeft_toLeftOf="@+id/guideline7"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"/>

        </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>
